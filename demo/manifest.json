{
  "manifest_version": 2,
  "name": "RainJoy-weibo-delete",
  "description": "This plugin allows you to delete your Sina micro-blog.",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "stock helper",
    "default_popup": "index.html"
  },
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "storage"
  ]
}
